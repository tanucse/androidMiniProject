<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="5dp"
                android:color="#F6030B"/>
            <corners android:radius="15dp"/>
            <solid android:color="#accced"
                />


            <padding android:top="5dp"
                android:bottom="5dp"
                android:right="5dp"
                android:left="5dp"/>
            <gradient android:startColor="#E40853"
                android:endColor="#E4AD07"
                android:centerColor="#EF3F07"
                android:angle="45"/>
        </shape>
    </item>

</selector>